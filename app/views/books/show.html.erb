 <div class="row">
  <%= render 'books/book', book: @new_book, user: @book.user %>
  <div class="col-md-8 offset-md-1">
   <h1>Book detail</h1>
   <table class="table">
    <tbody>
     <tr>
      <td><%= image_tag @book.user.get_profile_image %><br>
          <%= link_to @book.user.name, user_path(@book.user) %></td>
      <td><%= @book.title %></td>
      <td><%= @book.body %></td>
      <td>
       <% if @book.user == current_user %>
        <p><%= link_to 'Edit', edit_book_path(@book) %></p>
       <% end %>
      </td>
      <td>
       <% if @book.user == current_user %>
        <p><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に消しますか？" %></p>
       <% end %>
      </td>
     </tr>
    </tbody>
   </table>
  </div>