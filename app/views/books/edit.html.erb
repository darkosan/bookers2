<h1>Editing Book</h1>
  <% if flash[:notice] %>
   <p id="notice">
    <%= flash[:notice] %>
   </p>
  <% elsif flash[:alert] %>
　 <p id="alert">
　  <%= flash[:alert] %>
　 </p>
  <% end %>

<%= form_with model: @book do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body%>

  <%= f.submit 'Update Book' %>

  <%= link_to "Show", book_path(@book.id) %>
  <%= link_to "Back", books_path %>

<% end %>