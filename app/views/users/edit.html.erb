<h2>User info</h2>
 <% if flash[:notice] %>
  <p id="notice">
 　 <%= flash[:notice] %>
  </p>
 <% elsif flash[:alert] %>
  <p id="alert">
 　  <%= flash[:alert] %>
  </p>
 <% end %>
 
<%= form_with model: @user do |f| %>
 <div class="from-group">
   <label for="user_Name">Name</label><br>
   <%= f.text_field :name, autofocus: true, id:"name" %>
  </div>
  <div class="from-group">
   <label for="user_Image">Image</label><br>
   <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
  </div>
  <div class="from-group">
   <label for="user_Introduction">Introdustion</label><br>
   <%= f.text_area :introduction, autofocus: true, id:"introduction" %>
  </div>
  <%= f.submit "Update User" %>
<% end %>