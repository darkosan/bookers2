 <div class="row">
  <%= render 'books/book', book: @book %>
  <div class="col-md-8 offset-md-1">
   <h1>Books</h1>
   <table class="table">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= image_tag book.user.get_profile_image %></td>
       <td>
        <a href="<%= edit_book_path(book) %>"><%= book.title %></a>
       </td>
       <td><%= book.body %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
