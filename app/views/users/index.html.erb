<div class="container">
 <div class="row">
  <%= render 'books/book', books: @books %>
 </div>
 <div class="row">]
  <div class="col-md-9">
   <h1>Books</h1>
   <table class="table">
    <thead>
     <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
     </tr>
    </thead>
    <tbody>
     <% @books.each do |book| %>
      <tr>
       <td><%= image_tag book.user.get_profile_image %></td>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to 'Edit', edit_book_path(book) %></td>
       <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
      </tr>
     <% end %>
    </tbody>
   </table>
  </div>
 </div>
</div>